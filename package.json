{
  "name": "@infra-blocks/github-actions",
  "version": "0.0.0",
  "homepage": "https://github.com/infrastructure-blocks/ts-github-actions#readme",
  "bugs": {
    "url": "https://github.com/infrastructure-blocks/ts-github-actions/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infrastructure-blocks/ts-github-actions.git"
  },
  "exports": "./lib/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib/**/*.{js,d.ts,map}"
  ],
  "type": "module",
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "compile": "tsc",
    "clean": "rm -rf lib && rm -f infra-blocks-*.tgz",
    "lint": "eslint --ext .js,.cjs,.mjs,.ts --max-warnings 0 .",
    "test": "npm run test:unit",
    "test:coverage": "c8 npm run test",
    "test:coverage:lcov": "c8 --reporter=lcov npm run test",
    "test:unit": "mocha --config test/unit/.mocharc.cjs 'test/unit/**/*.spec.ts'",
    "test:integration": "mocha --config test/integration/.mocharc.js 'test/integration/**/*.spec.ts'"
  },
  "devDependencies": {
    "@infra-blocks/test": "^0.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.10.3",
    "@types/tmp": "^0.2.6",
    "@types/verror": "^1.10.9",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "c8": "^8.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "verror": "^1.10.1"
  }
}
